@model OnlineJobs.Controllers.ReportsController.InterviewReportViewModel

@{
    ViewData["Title"] = "Interview Report";
}

<div class="container mt-4">
    <h2>Interview Report</h2>

    <div class="row">
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Total Interviews</h5>
                    <h3 class="card-text">@Model.TotalInterviews</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Scheduled Interviews</h5>
                    <h3 class="card-text">@Model.ScheduledInterviews</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Completed Interviews</h5>
                    <h3 class="card-text">@Model.CompletedInterviews</h3>
                </div>
            </div>
        </div>
    </div>

    <button class="btn btn-primary" style="text-decoration: none;">
        <a href="/Reports/ApplicantReport" style="color: inherit; text-decoration: none;">Back</a>
    </button>
</div>