
    <style>
        /* Custom styles for modern design */
        .vacancy-header {
            background: linear-gradient(90deg, #007bff, #00c6ff);
            color: white;
            padding: 50px 0;
        }
        .vacancy-header h1 {
            font-size: 2.5rem;
            font-weight: bold;
        }
        .vacancy-card {
            border: none;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-top: -30px;
            border-radius: 8px;
        }
        .vacancy-card-body {
            background-color: #f8f9fa;
            padding: 30px;
            border-radius: 8px;
        }
        .vacancy-detail {
            font-size: 1.1rem;
            color: #555;
        }
        .vacancy-status {
            font-weight: bold;
            padding: 8px 15px;
            border-radius: 4px;
            color: white;
        }
        .vacancy-status.open {
            background-color: #28a745;
        }
        .vacancy-status.closed {
            background-color: #dc3545;
        }
        .created-info {
            color: #777;
            font-size: 0.9rem;
            margin-top: 20px;
        }
        .vacancy-btn {
            background-color: #ffdd57;
            color: black;
            border: none;
            font-weight: bold;
            padding: 10px 20px;
            border-radius: 5px;
            transition: background-color 0.3s;
        }
        .vacancy-btn:hover {
            background-color: #fbbd08;
        }
    </style>

    <!-- Vacancy Page -->
    <div class="vacancy-header text-center">
        <h1>Vacancy Details</h1>
        <p class="lead">Find out more about this exciting opportunity</p>
    </div>

    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <!-- Vacancy Card -->
                <div class="card vacancy-card">
                    <div class="card-body vacancy-card-body">
                        <h2 class="mb-4">{{Vacancy.Title}}</h2>
                        <p class="vacancy-detail"><strong>Description:</strong> {{Vacancy.Description}}</p>
                        <p class="vacancy-detail"><strong>Department:</strong> {{Vacancy.Department}}</p>
                        <p class="vacancy-detail"><strong>Positions Available:</strong> {{Vacancy.PositionsAvailable}}</p>

                        <!-- Status Badge -->
                        <span class="vacancy-status {{Vacancy.Status.ToLower()}}">
                            {{Vacancy.Status}}
                        </span>

                        <!-- Created By Info -->
                        <div class="created-info">
                            <p><strong>Created By:</strong> {{Vacancy.CreatedByUser.Name}}</p>
                            <p><strong>Created At:</strong> {{Vacancy.CreatedAt | date("MMM d, yyyy")}}</p>
                        </div>

                        <!-- Apply Button -->
                        <div class="mt-4">
                            <a href="apply" class="btn vacancy-btn">Apply Now</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    <button class="btn btn-primary" style="text-decoration: none;">
        <a href="/Vacancy/CreateVacancy" style="color: inherit; text-decoration: none;">Create</a>
    </button>
    <button class="btn btn-primary" style="text-decoration: none;">
        <a href="/Vacancy/EditVacancy" style="color: inherit; text-decoration: none;">Edit</a>
    </button>

    </div>

