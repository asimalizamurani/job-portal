@* @model IEnumerable<OnlineJobs.Models.HelpTopic> *@

@{
    ViewData["Title"] = "Help Center";
}

<style>
    .help-center {
        padding: 20px;
    }

    .help-category {
        margin-bottom: 20px;
    }

    .help-category h3 {
        font-weight: bold;
        margin-bottom: 10px;
    }

    .help-topic {
        margin-bottom: 10px;
    }

    .help-topic a {
        color: #28a745;
        text-decoration: none;
    }
</style>

<div class="container mt-4">
    <h2>Help Center</h2>

    <div class="row">
        <div class="col-md-4">
            <input type="text" class="form-control mb-3" placeholder="Search for help...">

            <div class="help-center">
                <div class="help-category">
                    <h3>General</h3>
                    <ul>
                        <li class="help-topic"><a href="#">How to Login</a></li>
                        <li class="help-topic"><a href="#">Forgot Password</a></li>
                        <li class="help-topic"><a href="#">System Requirements</a></li>
                    </ul>
                </div>

                <div class="help-category">
                    <h3>Vacancies</h3>
                    <ul>
                        <li class="help-topic"><a href="#">Create a New Vacancy</a></li>
                        <li class="help-topic"><a href="#">Edit a Vacancy</a></li>
                        <li class="help-topic"><a href="#">View Vacancy Details</a></li>
                    </ul>
                </div>

                <div class="help-category">
                    <h3>Applicants</h3>
                    <ul>
                        <li class="help-topic"><a href="#">View Applicant List</a></li>
                        <li class="help-topic"><a href="#">Search Applicants</a></li>
                    </ul>
                </div>

                <div class="help-category">
                    <h3>Interviews</h3>
                    <ul>
                        <li class="help-topic"><a href="#">Schedule an Interview</a></li>
                        <li class="help-topic"><a href="#">Update Interview Results</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-8">
        </div>
    </div>
</div>