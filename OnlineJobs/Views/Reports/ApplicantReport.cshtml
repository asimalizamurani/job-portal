@model OnlineJobs.Controllers.ReportsController.ApplicantReportViewModel

@{
    ViewData["Title"] = "Applicant Report";
}

<div class="container mt-4">
    <h2>Applicant Report</h2>

    <div class="row">
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Total Applicants</h5>
                    <h3 class="card-text">@Model.TotalApplicants</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Applicants Today</h5>
                    <h3 class="card-text">@Model.AppliedToday</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h3>Applicants by Status</h3>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Status</th>
                        <th>Count</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ApplicantsByRole)
                    {
                        <tr>
                            <td>@item.Role</td>
                            <td>@item.Count</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <button class="btn btn-primary" style="text-decoration: none;">
        <a href="/Reports/InterviewReport" style="color: inherit; text-decoration: none;">Interview Reports</a>
    </button>

    <button class="btn btn-primary" style="text-decoration: none;">
        <a href="/Reports/VacancyReport" style="color: inherit; text-decoration: none;">Vacancy Reports</a>
    </button>

</div>